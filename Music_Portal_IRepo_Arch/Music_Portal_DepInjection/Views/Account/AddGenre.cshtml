@{
    ViewBag.Title = "Отправить сообщение";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MusicPortal.Models.Genre

<style>
   
    .form-container {
        background-color: #f2f2f2;
        border-radius: 10px; 
        padding: 20px; 
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); 
        max-width: 400px; 
        margin: 0 auto; 

    
    .form-group {
        margin-bottom: 15px; 
    }

    .form-control {
        border-radius: 5px; 
        padding: 10px; 
        border: 1px solid #ccc; 
    }

    
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff; 
        border-radius: 20px; 
        padding: 10px 20px; 
        color: #fff; 
    }

        .btn-primary:hover {
            background-color: #0056b3; 
            border-color: #0056b3; 
        }
</style>



<div class="form-container">
    <form asp-controller="Account" asp-action="AddGenre" method="post">
        <div class="form-group">
            <label asp-for="Name">Название жанра:</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
